upstream netdata {
	server 127.0.0.1:19999 fail_timeout=5;
	keepalive 64;
}

server {
	listen 80;
	server_name status.tano.si;

	include /etc/nginx/snippets/letsencrypt.conf;

	location / {
		return 301 https://$server_name$request_uri;
	}
}

server {
	listen 443 ssl http2;
	server_name status.tano.si;
	root /var/www/fallback;

	include /etc/nginx/snippets/ssl.conf;
	include /etc/nginx/snippets/oauth2.conf;

	location / {
		include /etc/nginx/snippets/oauth2_enable.conf;
		proxy_set_header X-Forwarded-Host $host;
		proxy_set_header X-Forwarded-Server $host;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_pass http://netdata;
		proxy_http_version 1.1;
		proxy_pass_request_headers on;
		proxy_set_header Connection "keep-alive";
		proxy_store off;
	}

	include /etc/nginx/snippets/error_pages.conf;
	include /etc/nginx/snippets/error_global.conf;

	access_log /var/log/nginx/status.access.log;
	error_log /var/log/nginx/status.error.log;
}

server {
	listen 80;
	listen [::]:80;
	server_name update.tano.si;

	include /etc/nginx/snippets/letsencrypt.conf;

	location ^/(|player)/update.xml {
		return 301 $scheme://update.tano.si/legacy/update.xml;
	}

	location / {
		return 301 https://$server_name$request_uri;
	}

	access_log /var/log/nginx/update.access.log;
	error_log /var/log/nginx/update.error.log;
}

server {
	listen 443 ssl http2;
	listen [::]:443 ssl http2;
	server_name update.tano.si;

	root /var/www/update/;

	location ^/(|player)/update.xml {
		return 301 $scheme://update.tano.si/legacy/update.xml;
	}

	include /etc/nginx/snippets/error_pages.conf;
	include /etc/nginx/snippets/error_global.conf;

	access_log /var/log/nginx/update.access.log;
	error_log /var/log/nginx/update.error.log;
}
